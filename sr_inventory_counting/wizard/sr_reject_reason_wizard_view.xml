<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_sr_reject_reason_wizard_form" model="ir.ui.view">
        <field name="name">view.sr.reject.reason.wizard.form</field>
        <field name="model">sr.reject.reason.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Wizard">
                <group>
                    <field name="message" style="color:red; font-size:18px; font-weight:bold;" nolabel="1" readonly="1"
                           widget="text"/>
                    <field name="reason" widget="text"/>
                </group>
                <footer>
                    <button string="Ok" type="object" name="action_reject_ok" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sr_reject_reason_wizard" model="ir.actions.act_window">
        <field name="name">Reject All</field>
        <field name="res_model">sr.reject.reason.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>