<odoo>
    <record id="view_inv_adjustment_report_wizard_form" model="ir.ui.view">
        <field name="name">sr.inv.adjustment.wizard.form</field>
        <field name="model">sr.inv.adjustment.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Inventory Adjustment Report">
                <group>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <group>
                        <field name="product_ids" widget="many2many_tags"
                               options="{'no_create': True, 'no_create_edit': True}"/>
                        <field name="location_ids" widget="many2many_tags"
                               options="{'no_create': True, 'no_create_edit': True}"/>
                    </group>
                </group>

                <footer>
                    <button name="action_print_report" type="object" string="Print" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sr_adjustment_report_wizard" model="ir.actions.act_window">
        <field name="name">Inventory Adjustment Report</field>
        <field name="res_model">sr.inv.adjustment.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
