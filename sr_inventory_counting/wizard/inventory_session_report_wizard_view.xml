<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_inventory_session_wizard_form" model="ir.ui.view">
        <field name="name">inventory.session.report.wizard.form</field>
        <field name="model">inventory.session.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Inventory Session Report">
                <group>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <group>
                        <field name="user_ids" widget="many2many_tags"
                               options="{'no_create':True,'no_create_edit':True}"/>
                    </group>
                </group>
                <footer>
                    <button name="action_print_report" type="object" string="Print" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_inventory_session_wizard" model="ir.actions.act_window">
        <field name="name">Inventory Session Report</field>
        <field name="res_model">inventory.session.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
