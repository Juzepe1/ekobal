<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_inv_adjustment" model="report.paperformat">
            <field name="name">Inventory Adjustment</field>
            <field name="default" eval="True"/>
            <field name="margin_top">30</field>
            <field name="margin_bottom">32</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="orientation">Portrait</field>
            <field name="format">A4</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">30</field>
            <field name="dpi">90</field>
            <field name="css_margins" eval="True"/>
        </record>

        <record id="action_report_inv_adjustment" model="ir.actions.report">
            <field name="name">Inventory Adjustment</field>
            <field name="model">sr.inv.adjustment</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">sr_inventory_counting.report_inv_adjustment</field>
            <field name="report_file">sr_inventory_counting.report_inv_adjustment</field>
            <field name="binding_model_id" ref="model_sr_inventory_counting"/>
            <field name="paperformat_id" ref="sr_inventory_counting.paperformat_inv_adjustment"/>
            <field name="binding_type">report</field>
        </record>


        <menuitem id="menu_inv_adjustment_report"
                  name="Inventory Adjustment"
                  parent="stock.menu_warehouse_report"
                  action="action_sr_adjustment_report_wizard"
                  sequence="800"/>
    </data>
</odoo>