<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_inventory_count" model="report.paperformat">
            <field name="name">Inventory Count</field>
            <field name="default" eval="True"/>
            <field name="margin_top">30</field>
            <field name="margin_bottom">32</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="orientation">Portrait</field>
            <field name="format">A4</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">30</field>
            <field name="dpi">90</field>
            <field name="css_margins" eval="True"/>
        </record>

        <record id="action_report_inventory_count" model="ir.actions.report">
            <field name="name">Inventory Count</field>
            <field name="model">sr.inventory.counting</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">sr_inventory_counting.report_inv_count</field>
            <field name="report_file">sr_inventory_counting.report_inv_count</field>
            <field name="binding_model_id" ref="model_sr_inventory_counting"/>
            <field name="paperformat_id" ref="sr_inventory_counting.paperformat_inventory_count"/>
            <field name="binding_type">report</field>
        </record>


        <menuitem id="menu_inventory_count_report"
                  name="Inventory Count"
                  parent="stock.menu_warehouse_report"
                  action="action_inventory_count_report_wizard"
                  sequence="600"/>
    </data>
</odoo>