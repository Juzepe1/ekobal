<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_inv_adjustment">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <div>
                        <center>
                            <h1>Inventory Adjustment Report</h1>
                            <t t-if="start_date or end_date">
                                <h4>
                                    <t t-if="start_date and end_date">
                                        Date From
                                        <t t-esc="start_date"/>
                                        to
                                        <t t-esc="end_date"/>
                                    </t>
                                    <t t-elif="start_date">
                                        Date From
                                        <t t-esc="start_date"/>
                                        to
                                        <t t-esc="today"/>
                                    </t>
                                    <t t-elif="end_date">
                                        Up to
                                        <t t-esc="end_date"/>
                                    </t>
                                </h4>
                            </t>
                        </center>
                    </div>

                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr style="background-color:#f2f2f2;">
                                <th class="fw-bold text-center">Date</th>
                                <th class="fw-bold text-center">Count</th>
                                <th class="fw-bold text-center">Product</th>
                                <th class="fw-bold text-center">Location</th>
                                <th class="fw-bold text-center">Counted Qty</th>
                                <th class="fw-bold text-center">On Hand Qty</th>
                                <th class="fw-bold text-center">Difference</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-if="lines">
                                <t t-foreach="lines" t-as="line">
                                    <tr>
                                        <td class="text-center">
                                            <t t-esc="line['date']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-esc="line['count']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-esc="line['product']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-esc="line['location']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-esc="line['counted_qty']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-esc="line['on_hand_qty']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-esc="line['difference']"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                            <t t-if="not lines">
                                <tr>
                                    <td colspan="7" class="text-center">No data available.</td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
